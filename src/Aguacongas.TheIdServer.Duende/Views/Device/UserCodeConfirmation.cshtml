------------------------------------------------------------------------------
View: Device/UserCodeConfirmation.cshtml

Purpose:
Renders the device authorization confirmation page for OAuth2 device flow.
Displays client information, requested scopes, and allows the user to confirm
the user code and grant or deny consent for requested permissions.

Model:
Aguacongas.IdentityServer.UI.Device.DeviceAuthorizationViewModel

Key Features:
- Shows client logo and name.
- Prompts user to confirm the authorization code if required.
- Lists identity and API scopes for user consent.
- Allows user to remember consent decision.
- Provides links to client, policy, and terms of service.
- Uses IViewLocalizer for localization of UI strings.

Usage:
This view is rendered when a device requests authorization and the user must
confirm the code and grant permissions.

------------------------------------------------------------------------------
*@

@inject IViewLocalizer Localizer

@model Aguacongas.IdentityServer.UI.Device.DeviceAuthorizationViewModel

<div class="page-header">
    <div class="row page-header">
        <div class="col-sm-10">
            @* Display client logo if available *@
            @if (Model.ClientLogoUrl != null)
            {
                <div class="client-logo"><img src="@Model.ClientLogoUrl" alt="logo"></div>
            }
            @* Display client name and request message *@
            <h1>
                @Localizer["{0} <small>is requesting your permission</small>", @Model.ClientName!]
            </h1>
        </div>
    </div>

    @* Prompt user to confirm the authorization code if required *@
    @if (Model.ConfirmUserCode)
    {
        <div class="row">
            <div class="col-sm-8">
                <p>
                    @Localizer["Please confirm that the authorization request quotes the code: \"{0}\".", Model.UserCode!]
                </p>
            </div>
        </div>
    }

    <div class="row">
        <div class="col-sm-8">
            @* Display validation summary *@
            <partial name="_ValidationSummary" />

            @* Consent form for granting permissions *@
            <form asp-action="Callback" class="consent-form">
                @* Hidden field for user code *@
                <input asp-for="UserCode" type="hidden" value="@Model.UserCode" />

                <div>@Localizer["Uncheck the permissions you do not wish to grant."]</div>

                @* List identity scopes for consent *@
                @if (Model.IdentityScopes?.Any() == true)
                {
                    <div class="panel panel-default consent-buttons">
                        <div class="panel-heading">
                            <span class="glyphicon glyphicon-user"></span>
                            @Localizer["Personal Information"]
                        </div>
                        <ul class="list-group">
                            @foreach (var scope in Model.IdentityScopes)
                            {
                                <partial name="_ScopeListItem" model="@scope" />
                            }
                        </ul>
                    </div>
                }

                @* List API scopes for consent *@
                @if (Model.ApiScopes?.Any() == true)
                {
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <span class="glyphicon glyphicon-tasks"></span>
                            @Localizer["Application Access"]
                        </div>
                        <ul class="list-group">
                            @foreach (var scope in Model.ApiScopes)
                            {
                                <partial name="_ScopeListItem" model="scope" />
                            }
                        </ul>
                    </div>
                }

                @* Option to remember consent decision *@
                @if (Model.AllowRememberConsent)
                {
                    <div class="consent-remember">
                        <label>
                            <input class="consent-scopecheck" asp-for="RememberConsent" />
                            <strong>@Localizer["Remember My Decision"]</strong>
                        </label>
                    </div>
                }

                @* Consent action buttons and client info link *@
                <div class="consent-buttons">
                    <button name="button" value="yes" class="btn btn-primary" autofocus>@Localizer["Yes, Allow"]</button>
                    <button name="button" value="no" class="btn">@Localizer["No, Do Not Allow"]</button>
                    @if (Model.ClientUrl != null)
                    {
                        <a class="pull-right btn btn-default" target="_blank" href="@Model.ClientUrl" rel="noopener noreferrer">
                            <span class="glyphicon glyphicon-info-sign"></span>
                            <strong>@Model.ClientName</strong>
                        </a>
                    }
                </div>
                @* Policy and terms of service links *@
                <div class="consent-buttons">
                    @if (Model.PolicyUrl != null)
                    {
                        <div>
                            <a target="_blank" href="@Model.PolicyUrl" rel="noopener noreferrer">
                                @Localizer["Policy"]
                            </a>
                        </div>
                    }
                    @if (Model.TosUrl != null)
                    {
                        <a target="_blank" href="@Model.TosUrl" rel="noopener noreferrer">
                            @Localizer["Terms of service"]
                        </a>
                    }
                </div>
            </form>
        </div>
    </div>
</div>