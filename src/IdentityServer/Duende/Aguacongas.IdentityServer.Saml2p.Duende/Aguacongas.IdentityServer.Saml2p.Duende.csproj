<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net8.0</TargetFramework>

    <Authors>Olivier Lefebvre</Authors>
		<Description>Add Saml2P controller to your Duende.IdentityServer server.</Description>
		<Copyright>Copyright (c) 2023 @Olivier Lefebvre</Copyright>
		<PackageProjectUrl>https://github.com/Aguafrommars/TheIdServer/tree/master/src/IdentityServer/Duende/Aguacongas.IdentityServer.Saml2p.Duende</PackageProjectUrl>
		<RepositoryUrl>https://github.com/aguacongas/TheIdServer</RepositoryUrl>
		<RepositoryType>git</RepositoryType>
		<PackageTags>theidserver;duende.identityserver;saml2p</PackageTags>
		<GenerateDocumentationFile>true</GenerateDocumentationFile>
		<PackageIcon>package-icon.png</PackageIcon>
		<PackageLicenseExpression>Apache-2.0</PackageLicenseExpression>
		<PackageReadmeFile>README.md</PackageReadmeFile>

    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <EnablePreviewFeatures>True</EnablePreviewFeatures>
  </PropertyGroup>

  <ItemGroup>
		<None Update="README.md">
			<PackagePath>\</PackagePath>
			<Pack>True</Pack>
		</None>
	</ItemGroup>

  <ItemGroup>
    <PackageReference Include="Duende.IdentityServer" Version="7.0.0-preview.2" />
    <PackageReference Include="ITfoxtec.Identity.Saml2.MvcCore" Version="4.10.6" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\..\Aguacongas.IdentityServer.Store\Aguacongas.IdentityServer.Store.csproj" />
    <ProjectReference Include="..\Aguacongas.IdentityServer.KeysRotation.Duende\Aguacongas.IdentityServer.KeysRotation.Duende.csproj" />
  </ItemGroup>

  <ItemGroup>
		<None Include="package-icon.png" Pack="true" PackagePath="" />
	</ItemGroup>

</Project>
