@using Microsoft.AspNetCore.Identity
@page "/roles"
@inherits EntitiesModel<Entity.Role>

<div class="row sticky-top bg-light">
    <div class="col">
        <PageListHeader Name="@Localizer["Roles"]" Url="role"></PageListHeader>
    </div>
    <div class="col">
        <Filter TermChanged="OnFilterChanged" />
    </div>
    <EntitiesGrid Items="EntityList" TableClass="table mb-0">
        <TableHeader>
            <th class="w-50" scope="col">
                <SortableHeader Property="Id"
                                Text="@Localizer["id"]"
                                GridState="GridState" />
            </th>
            <th class="w-50" scope="col">
                <SortableHeader Property="Name"
                                Text="@Localizer["name"]"
                                GridState="GridState" />
            </th>
        </TableHeader>
    </EntitiesGrid>
</div>
@if (EntityList == null)
{
    <Loading />
}
else
{
    <div class="row">
        <EntitiesGrid Items="EntityList" TableClass="table table-hover"
                      RowClicked="(Entity.Role item) => OnRowClicked(item)">
            <RowTemplate>
                <td class="w-50">@context.Id</td>
                <td class="w-50">
                    @context.Name
                </td>
            </RowTemplate>
        </EntitiesGrid>
    </div>
}

