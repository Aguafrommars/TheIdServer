@page "/clients"
@inherits EntitiesModel<Entity.Client>

<div class="row bg-body sticky-top">
    <div class="col-12 col-md">
        <PageListHeader Name="@Localizer["Clients"]" Url="client" ExportRequest="@ExportRequest" ExportDisabled="@ExportDisabled" />
    </div>
    <div class="col-12 col-md">
        <Filter TermChanged="OnFilterChanged" />
    </div>
    <EntitiesGrid Items="PagedEntityList" TableClass="table mb-0">
        <TableHeader>
            <th><SelectAll GridState="GridState" /></th>
            <th class="w-25" scope="col">
                <SortableHeader Property="Id"
                                Text="@Localizer["id"]"
                                GridState="GridState" />
            </th>
            <th class="w-75" scope="col">
                <SortableHeader Property="ClientName"
                                Text="@Localizer["name"]"
                                GridState="GridState" />
            </th>
        </TableHeader>
    </EntitiesGrid>
</div>
@if (EntityList == null)
{
    <Loading />
}
else
{
    <div class="row">
        <EntitiesGrid Items="PagedEntityList" TableClass="table table-hover">
            <RowTemplate>
                <SelectableItem GridState="GridState" Item="@context" Selected="value => OnItemSelected(context.Id, value)" Context="item">
                    <td class="w-25" @onclick="() => OnRowClicked(item)">@item.Id</td>
                    <td class="w-75" @onclick="() => OnRowClicked(item)">
                        @LocalizeEntityProperty(item, item.ClientName, Entity.EntityResourceKind.DisplayName)
                        <div><em>@LocalizeEntityProperty(item, item.Description, Entity.EntityResourceKind.Description)</em></div>
                    </td>
                </SelectableItem>
            </RowTemplate>
        </EntitiesGrid>
    </div>
    <div class="row">
        <div class="col-12">
            <Pagination TotalPages="@TotalPages" CurrentPage="@CurrentPage" OnPageChanged="@NavigateToPage" />
        </div>
    </div>
}