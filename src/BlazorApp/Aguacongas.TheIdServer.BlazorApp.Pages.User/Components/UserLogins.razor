@inherits  EntitesGridModel<Entity.UserLogin>

<EntitiesGrid Items="@Logins" TableClass="table table-hover" Context="login">
    <TableHeader>
        <th scope="col">
            <SortableHeader Property="ProviderDisplayName"
                            Text="@Localizer["provider"]"
                            GridState="GridState" />
        </th>
        <th scope="col">
            <SortableHeader Property="ProviderKey"
                            Text="@Localizer["key"]"
                            GridState="GridState" />
        </th>
        <th>
            <SortableHeader Property="Value"
                            Text="@Localizer["create at"]"
                            GridState="GridState" />
        </th>
        <th></th>
    </TableHeader>
    <RowTemplate>
        <td>
            @login.ProviderDisplayName
        </td>
        <td>
            @login.ProviderKey
        </td>
        <td>
            <AuthorizeButton Type="button" CssSubClass="btn-primary" Clicked="() => OnDeleteEntityClicked(login)">
                <span class="oi oi-trash"></span>
            </AuthorizeButton>
        </td>
    </RowTemplate>
</EntitiesGrid>
